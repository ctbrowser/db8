description "@WEBOS_PROJECT_SUMMARY@"

start on datastore-init-start
stop on started start_update

respawn

# Comment this line out to suppress logs on the console
#console output

pre-start script
	# check available disk space
	# MINIMAL_BYTES_FREE is 95.5% of disk space
	BYTES_FREE=$(($(stat -f -c "%a*%S" /var/db)))
	MINIMAL_BYTES_FREE="30696013"

	# if not enough disk space, make factory reset and reboot tv
	if [ "$BYTES_FREE" -le "$MINIMAL_BYTES_FREE" ]; then
	        /usr/bin/luna-send -n 1 luna://com.webos.service.tv.systemproperty/doUserDefault '{}'
		exit 1
	fi

	# move logs
	if [ -d @WEBOS_INSTALL_LOCALSTATEDIR@/dblog ]; then
		mv @WEBOS_INSTALL_LOCALSTATEDIR@/dblog/* @WEBOS_INSTALL_LOCALSTATEDIR@/db
		rmdir @WEBOS_INSTALL_LOCALSTATEDIR@/dblog
	fi
	if [ -d @WEBOS_INSTALL_LOCALSTATEDIR@/run/db8 ]; then
		rm -rf @WEBOS_INSTALL_LOCALSTATEDIR@/run/db8
	fi

	mkdir @WEBOS_INSTALL_LOCALSTATEDIR@/run/db8
	mkdir @WEBOS_INSTALL_LOCALSTATEDIR@/run/db8/mountpoints

end script

script
	# Use centralized nice script
	if [ -f @WEBOS_INSTALL_SYSCONFDIR@/init.d/webos-nicer.sh ]
	then
		. @WEBOS_INSTALL_SYSCONFDIR@/init.d/webos-nicer.sh
	fi
	exec $WEBOS_NICE @WEBOS_INSTALL_SBINDIR@/mojodb-luna -c @WEBOS_INSTALL_WEBOS_SYSCONFDIR@/mojodb.conf @WEBOS_INSTALL_DB8DATADIR@ @WEBOS_INSTALL_DB8MEDIADIR@
end script
